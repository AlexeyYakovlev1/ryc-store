<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/logo.jpg" type="image/jpg" sizes="16x16">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/slick.css">
    <link rel="icon" href="assets/img/logo.jpg" type="image/jpg" sizes="16x16">
    <title>#{title}</title>
</head>
<body>
    include ./partials/header.pug
    include ./partials/arrow-up.pug
    include ./partials/preolaider.pug
    <div class="window-look">
        <ul class="window-look__list-images">
            each img in product.img
                <li class="window-look__img" style="background-image: url(#{img});"></li>
        </ul>
        <div class="window-look__close"></div>
    </div>
    <div class="product">
        <div class="container">
            <div class="product__info">
                <div class="product__block product__block-img">

                    <div style="background-image: url(#{product.img[0]});" class="product__img"></div>
                </div>
                <div class="product__block product__block-information">
                    <div class="product__block-content">
                        <div class="product__block-heading">#{product.title}</div>
                        <div class="product__block-price">#{product.nowPrice}</div>
                        if product.description
                            <p class="product__block-desc">#{product.description}</p>
                        else
                            <p class="product__block-desc">У этого товара нет описания</p>
                        <select class="product__block-list-size">
                            <option value="" disabled>Выберите размер</option>
                            each size in product.sizes
                                <option value="">#{size}</option>
                        </select>
                        if isAuth
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="id" value="#{product.id}">
                                <input type="hidden" name="_csrf" value="#{csrf}">
                                <input type="submit" class="product__block-link" value="Добавить в корзину">
                            </form>
                        else
                            <form action="/auth/login" method="GET">
                                <input type="hidden" name="_csrf" value="#{csrf}">
                                <input type="submit" class="product__block-link" value="Добавить в корзину">
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="options-wrapper">
        <div class="container">
            <ul class="options">
                each product in products
                    <li class="card" data-size="#{product.size}">
                        <a href="/shop/#{product.id}" title="#{product.name}">
                            <div class="card__block-img">
                                <figure>
                                    <img src="#{product.img[0]}" alt="#{product.name}">
                                </figure>
                            </div>
                            <div class="card__description">
                                <span class="card-name">#{product.title}</span>
                                <div class="card__block-price">
                                    if product.oldPrice > 0
                                        <span class="card-old-price">#{product.oldPrice}</span>
                                    <span class="card-now-price">#{product.nowPrice}</span>

                                    if product.sale > 0
                                        <span class="card-sale">#{product.sale}%</span>
                                </div>
                            </div>
                        </a>
                    </li>
            </ul>
        </div>
    </div>
    include ./partials/footer.pug
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/slick.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/preolaider.js"></script>
    <script src="/js/slider.js"></script>
</body>
</html>